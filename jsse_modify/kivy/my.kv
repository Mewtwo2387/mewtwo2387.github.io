<MainGrid>:
    items:items

    GridLayout:
        cols: 1
        size: root.width, root.height

        #Label:
            #text: "QueQat"

        Image:
            source: 'meow.jpg'
            allow_stretch: True
            keep_ratio: False
        GridLayout:
            cols: 2
            Label:
                background_color: (1,1,0,1)
                canvas.before:
                    Color:
                        rgba: self.background_color
                    Rectangle:
                        size:self.size
                        pos:self.pos
                text: "Choose your preferred payment method"
                color: (0,0,0,1)
            GridLayout:
                cols:2
                ToggleButton:
                    text: "cash"
                    group: "info"
                ToggleButton:
                    text: "card"
                    group: "info"
                    state: "down"
            Label:
                background_color: (1,0,1,1)
                canvas.before:
                    Color:
                        rgba: self.background_color
                    Rectangle:
                        size:self.size
                        pos:self.pos

                text_size: self.size
                halign: 'center'
                valign: 'middle'
                text: "Enter the number of types of items to purchase, press enter"
                color: (0,0,0,1)


            TextInput:
                id:items
                multiline: False
                on_text_validate: root.process()
                input_filter: 'int'



<P>:
    title: "Result"
    queue_no:queue_no
    FloatLayout:
        Label:
            id:queue_no
            text: "Please go to queue 3"
            size_hint: 0.6, 0.2
            pos_hint: {"x":0.2, "top":1}

        GridLayout:
            cols:2
            size_hint: 0.8, 0.2
            pos_hint: {"x":0.1, "y":0.1}
            Button:
                text: "Delete previous input"
                on_release: root.dismiss(); root.restore()

            Button:
                text: "Done"
                on_release: root.dismiss(); root.reset()
