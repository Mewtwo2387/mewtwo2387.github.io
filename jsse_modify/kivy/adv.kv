<MainGrid>:
    items:items
    canvas.before:
        Color:
            rgba: 1, 1, 1, 1
        Rectangle:
            pos: self.pos
            size: self.size

    GridLayout:
        cols: 1
        size: root.width, root.height

        #Label:
            #text: "QueQat"

        Image:
            source: 'meow.jpg'
            allow_stretch: True
            keep_ratio: False
        GridLayout:
            cols: 2
            Label:
                background_color: (1,1,1,1)
                canvas.before:
                    Color:
                        rgba: self.background_color
                    Rectangle:
                        size:self.size
                        pos:self.pos
                text: "Choose your preferred payment method:"
                color: (0,0,0,1)
            GridLayout:
                cols:4

                Label:
                    text: "cash"
                    color: (0,0,0,1)
                CheckBox:
                    group: "info"
                    color: (0,0,0,1)

                Label:
                    text: "card"
                    color: (0,0,0,1)
                CheckBox:
                    group: "info"
                    state: "down"
                    color: (0,0,0,1)
            Label:
                background_color: (1,1,1,1)
                canvas.before:
                    Color:
                        rgba: self.background_color
                    Rectangle:
                        size:self.size
                        pos:self.pos

                text_size: self.size
                halign: 'center'
                valign: 'middle'
                text: "Number of types of items to purchase:"
                color: (0,0,0,1)

            AnchorLayout:
                anchor_x: 'center'
                anchor_y: 'center'
                TextInput:
                    id:items
                    multiline: False
                    on_text_validate: root.process()
                    size_hint: (None, None)
                    height: 30
                    width : 500
                    input_filter: 'int'
        AnchorLayout:
            anchor_x: 'center'
            anchor_y: 'center'
            size_hint_y: None
            height: 30
            Button:
                size_hint: (None, None)
                height: 30
                width: 100
                pos_hint:
                text:"Enter"
                on_release: root.process()



<P>:
    title: "Result"
    queue_no:queue_no
    FloatLayout:
        Label:
            id:queue_no
            text: "Please go to queue 3"
            size_hint: 0.6, 0.2
            pos_hint: {"x":0.2, "top":1}

        GridLayout:
            cols:2
            size_hint: 0.8, 0.2
            pos_hint: {"x":0.1, "y":0.1}
            Button:
                text: "Delete previous input"
                on_release: root.dismiss(); root.restore()

            Button:
                text: "Done"
                on_release: root.dismiss(); root.reset()
